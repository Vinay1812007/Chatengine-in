rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isChatParticipant(chatId) {
      return request.auth.uid in firestore.get(/databases/(default)/documents/chats/$(chatId)).data.memberIds;
    }

    match /uploads/users/{uid}/{allPaths=**} {
      allow read, write: if signedIn() && request.auth.uid == uid;
    }

    match /uploads/chats/{chatId}/{mediaType}/{fileName} {
      allow read: if signedIn() && isChatParticipant(chatId);
      allow write: if signedIn() && isChatParticipant(chatId);
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
